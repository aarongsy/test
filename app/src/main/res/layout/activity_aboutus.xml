<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.diana.test3.Contacts"
    android:background="@drawable/background2">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/button121"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:id="@+id/button122"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="About us"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/button20"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000"
        android:textSize="@dimen/new3" />

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="210dp"
        android:id="@+id/scrollView"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:fillViewport="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zap in association with UCL Computer Sciences, is developing software and a prototype app to test a new disposable nappy collection service. If you have any technical issues or questions, please contact us at nic@nappyzap.com 07825832596. "
            android:id="@+id/textView18"
            android:textSize="@dimen/new4"
            android:layout_marginTop="20dp"/>

    </ScrollView>

    <ImageView
        android:layout_width="200dp "
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/scrollView"
        android:src="@drawable/logo"
        android:layout_marginLeft="100dp" />


</RelativeLayout>
